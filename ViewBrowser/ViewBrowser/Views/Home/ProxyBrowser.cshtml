@{
    ViewData["Title"] = "🌐 Advanced Web Proxy & VPN Browser";
    Layout = null;
    var initialUrl = ViewBag.InitialUrl as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/proxy-browser.css" asp-append-version="true" />
</head>
<body>
    <div class="proxy-container">
        <!-- Main Content Frame -->
        <div class="proxy-frame">
            <div id="loadingOverlay" class="loading-overlay" style="display: none;">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-3">
                        <h5 style="color: #667eea;">🔒 Loading through secure VPN tunnel...</h5>
                    </div>
                </div>
            </div>
            <iframe id="contentFrame" sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-modals"></iframe>
        </div>

        <!-- Fixed Bottom Toolbar -->
        <div class="proxy-toolbar">
            <div class="toolbar-content">
                <!-- Status Section -->
                <div class="status-section">
                    <span id="connectionStatus" class="status-badge bg-secondary">
                        🔴 <span class="btn-text">Disconnected</span>
                    </span>
                </div>

                <!-- Connection Buttons -->
                <div class="connection-section">
                    <button id="connectBtn" class="btn-proxy btn-success">
                        🔌 <span class="btn-text">Connect</span>
                    </button>
                    <button id="disconnectBtn" class="btn-proxy btn-danger" disabled>
                        ❌ <span class="btn-text">Disconnect</span>
                    </button>
                </div>

                <!-- URL Input Section -->
                <div class="url-section">
                    <input type="url" 
                           class="url-input" 
                           id="targetUrl" 
                           placeholder="Enter URL..."
                           value="@initialUrl">
                    <button class="btn-proxy btn-light" id="goBtn" disabled>
                        🚀 <span class="btn-text">Go</span>
                    </button>
                    <button class="btn-proxy btn-light" id="refreshBtn" disabled>
                        🔄 <span class="btn-text">Refresh</span>
                    </button>
                </div>

                <!-- Stats Section -->
                <div class="stats-section">
                    <span id="loadTime">⏱️ --ms</span>
                    <span id="cacheStatus">💾 --</span>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/proxy-browser.js"></script>
</body>
</html>